//SWITCH
#include<LPC214X.h>
int main(){
while(1)
	{

IODIR0|=(1<<0);//set direction as output
IODIR0|=(1<<1);
IODIR0|=(1<<2);
IODIR0|=(1<<3);
IODIR0|=(1<<4);
IODIR0|=(1<<5);
IODIR0|=(1<<6);

		IOSET0|=(1<<6);
		IOSET0|=(1<<2);
     IOSET0|=(1<<3);
		IOSET0|=(1<<4);
		IOSET0|=(1<<5);
		IOSET0|=(1<<0);
	}	
}